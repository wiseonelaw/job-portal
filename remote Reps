<script>
    // Form submission handler
    function handleFormSubmit(event) {
        event.preventDefault(); // Prevent form from submitting

        // Validate furlough number length (should be 9 characters and alphanumeric)
        const furloughNumber = document.getElementById('furlough_number').value;
        const furloughRegex = /^[a-zA-Z0-9]{9}$/; // Alphanumeric and exactly 9 characters
        if (!furloughRegex.test(furloughNumber)) {
            alert('Furlough Number must be alphanumeric and 9 characters long.');
            return false;
        }

        // Hide registration form
        document.getElementById('registrationForm').classList.add('hidden');

        // Show success page
        document.getElementById('successPage').classList.remove('hidden');

        return false;
    }
</script>

